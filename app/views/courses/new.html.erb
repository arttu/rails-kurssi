<%= link_to('Back to list', courses_path, :class => 'back_to_index') %>

<h3>Create a new course</h3>
<% form_for(@course, :html => {:class => 'validate'}) do |f| %>
	<p><%= f.error_messages %></p>
	<%= f.label :name %><br />
	<%= f.text_field :name %><br />
	<%= f.label :description %><br />
	<%= f.text_area :description %><br />
	<br />
	<%= f.submit "Create" %>
<% end %>